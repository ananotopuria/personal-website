{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-underscore-dangle": "off",
    "no-restricted-syntax": "off",
    "prefer-const": "error",
    "prefer-template": "error",
    "linebreak-style": "off",
    "prettier/prettier": "error" // Enable the prettier/prettier rule for Prettier integration
  }
}
